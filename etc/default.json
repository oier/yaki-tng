{
    "debug": true,
    "reloader": true,
    "environment": "dev",
    "http": {
        "bind_address": "127.0.0.1",
        "port": 8000
    },
    "indexer": {
        "bind_address": "127.0.0.1",
        "port": 8983,
        "storage": {
            "path": "/tmp/index"
        }
    },
    "theme"  : "ink",
    "content": {
        "path":  "data/main"
    },
    "cache": {
        "#": "In-worker memory cache",
        "worker_timeout": 60,
        "#": "Redis cache timeout",
        "redis_timeout": 300,
        "#":"HTTP Cache control",
        "cache_control": 3600
    },
    "wiki": {
        "#"       : "Paths",
        "base"    : "/space",
        "home"    : "start",
        "media"   : "/media",
        "plugins": {
        }
    },
    "logging": {
        "version": 1,
        "formatters": {
            "http": {
                "format" : "localhost - - [%(asctime)s] %(process)d \"%(levelname)s %(filename)s/%(funcName)s:%(lineno)d\" %(message)s",
                "datefmt": "%d/%b/%Y %H:%M:%S"
            },
            "color": {
                "()": "utils.logkit.ColorFormatter",
                "format" : "localhost - - [%(asctime)s] %(process)d \"%(levelname)s %(filename)s/%(funcName)s:%(lineno)d\" %(message)s",
                "datefmt": "%d/%b/%Y %H:%M:%S"
            }
        },
        "handlers": {
            "console": {
                "class"    : "logging.StreamHandler",
                "formatter": "color",
                "level"    : "DEBUG",
                "stream"   : "ext://sys.stdout"
            },
            "pygments-http" : {
                "class"    : "utils.logkit.PygmentsHandler",
                "formatter": "http",
                "level"    : "DEBUG",
                "stream"   : "ext://sys.stderr",
                "syntax"   : "guess"
            }
        },
        "loggers": {
            "yaki.*": {
                "level"   : "INFO",
                "handlers": ["console"],
                "propagate": false
            },
            "whoosh": {
                "level"   : "DEBUG",
                "handlers": ["console"]
            },
            "bottle": {
                "level"   : "DEBUG",
                "handlers": ["console"],
                "propagate": false
            }
        },
        "root": {
            "level"   : "DEBUG",
            "handlers": ["console"]
        }
    }
}
